<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#8DF5E3"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/custom_row_event"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Company Name"
            android:textAllCaps="true"
            android:textColor="@color/purple_700"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/custom_row_desc"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_row_event"
            android:layout_marginLeft="10dp"
            android:text="XYZ"
            android:textColor="@color/purple_500"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/custom_row_date"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_row_desc"
            android:layout_marginLeft="10dp"
            android:inputType="date"
            android:text="Date"
            android:textColor="@color/purple_200"
            android:textSize="22dp"
            tools:ignore="TouchTargetSizeCheck" />

        <CheckBox
            android:id="@+id/custom_row_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="22.5dp"
            android:layout_marginEnd="10dp"
            android:buttonTint="@color/black"
            android:text="Done"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>